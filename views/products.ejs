
<%- include('./partials/header'); %>

<body class="bg-gray-100 font-sans">
    <div class="max-w-screen-lg mx-auto p-4">
        <h1 class="text-2xl font-semibold mb-6">All Products</h1>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
            <% products.forEach(function(elem){ %>
                <div class="bg-white p-4 rounded-lg shadow-lg flex flex-col items-center">
                    <img src="data:image/jpg;base64, <%= elem.image.toString('base64') %>" alt="<%= elem.name %>" class=" w-full object-cover rounded-lg">
                    <p class="mt-4 font-bold text-lg text-center"><%= elem.name %></p>
                    <p class="mt-2 text-sm text-center text-gray-600"><%= elem.description %></p>
                    <p class="mt-2 text-sm text-gray-500 line-through">₹<%= Number(elem.price)+20 %></p>
                    <p class="mt-1 font-bold text-lg text-green-700">₹<%= elem.price %></p>
                    <a href="/cart/add/<%= elem._id %>" class="mt-4 bg-green-600 text-white py-2 px-4 rounded hover:bg-green-700">ADD</a>
                </div>
            <% }) %>
        </div>
        <% if(somethingInCart){ %>
            <div class="py-20"></div>
            <!-- Footer -->
            <div class="bg-white p-4 rounded-lg shadow fixed bottom-0 inset-x-0">
                <div class="flex justify-between items-center mb-10">
                    <div>
                        <p class="text-sm">Get FREE delivery</p>
                        <p class="text-xs text-gray-500">Add products worth ₹236 more</p>
                    </div>
                    <button class="text-blue-500">See all coupons</button>
                </div>
                <div class="flex justify-between items-center mt-2">
                    <div>
                        <%= cartCount %> Item
                    </div>
                    <a href="/cart"
                        class="flex items-center justify-center px-32 py-3 bg-green-700 text-white rounded-lg"><span
                            class="text-lg">Next</span><i class="text-2xl ri-arrow-right-s-fill"></i></a>
                </div>
            </div>
         <% } %>
    </div>
</body>

<%- include('./partials/footer'); %>